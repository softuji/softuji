public class Main {
    public static void main(String[] args) {
    String phrase = "I hope I can master Java some day in the future.";
    System.out.println(phrase); //create a string
    System.out.println("The length of the phrase string is: " + phrase.length()); //find the length
    System.out.println(phrase.toUpperCase()); //convert to upper case
    System.out.println(phrase.toLowerCase()); //convert to lower case
    System.out.println(phrase.indexOf("Java")); //finding a strin in string
    String firstName = "Sofia";
    String lastName = "Nemotto";
    System.out.println(firstName + " " + lastName); //string concatenation
    String a = "24";
    int b = 01;
    String c = a + b;
    System.out.println(c); //string + number return string concatenation
    }
}
